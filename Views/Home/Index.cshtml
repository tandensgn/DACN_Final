                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href=" @Url.Action("ProductDetail", "Products", new { prodId = item.prod_id }) " class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("ProductDetail", "Products", new { prodId = item.prod_id })">@item.prod_name</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@item.prod_price VND</span>
                                                <del>@item.prod_reprice VND</del>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- //first section -->
                </div>
            </div>
            <!-- //product 1 -->
        </div>
    </div>

</div>
