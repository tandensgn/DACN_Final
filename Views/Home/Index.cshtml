@{
    ViewBag.Title = "Home Page";
}
@using DACN_SalePhone_Final.Models
@model DACN_SalePhone_Final.Models.IndexProducts
<!-- banner -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item item1 active">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>
                            New Iphone model
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            <span>
                                Coming
                            </span>
                        </h3>
                        <a class="button2" href="@Url.Action("ProductListByCate","Products",new {cateID = 1})">Shop Now </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item item2">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>

                            <span>Powerful</span> phone
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            Samsung
                            <span>phone</span>
                        </h3>
                        <a class="button2" href="@Url.Action("ProductListByCate","Products",new {cateID = 2})">Shop Now </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item item3">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>
                            Proud of
                            <span>VIETNAM</span> phone
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">
                            VSMART
                            <span> ACTIVE 3 </span>
                        </h3>
                        <a class="button2" href="@Url.Action("ProductDetail", "Products", new { prodId = 10})">Shop Now </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- //banner -->
<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>O</span>ur
            <span>P</span>roducts
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product 1 -->
            <div class="agileinfo-ads-display">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <h3 class="heading-tittle text-center font-italic">IPHONE</h3>
                        <div class="row">
                            @foreach (var item in Model.indexProduct1)
                            {
                                <div class="col-md-3 product-men">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="@item.prod_icon" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a href=" @Url.Action("ProductDetail", "Products", new { prodId = item.prod_id }) " class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="@Url.Action("ProductDetail", "Products", new { prodId = item.prod_id })">@item.prod_name</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@item.prod_price VND</span>
                                                <del>@item.prod_reprice VND</del>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- //first section -->
                </div>
            </div>
            <!-- //product 1 -->
            <!-- product 1 -->
            <div class="agileinfo-ads-display">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <h3 class="heading-tittle text-center font-italic">SAMSUNG</h3>
                        <div class="row">
