<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i>|</i>
                </li>
                <li>
                    Checkout
                </li>
            </ul>
        </div>
